<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="8dp"
android:elevation="8dp"
app:cardCornerRadius="8dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/txv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:padding="5dp"
        android:text="Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txv_label_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_name"
        android:layout_toRightOf="@id/image"
        android:padding="3dp"
        android:text="Mobile"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txv_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_name"
        android:layout_toRightOf="@id/txv_label_mobile"
        android:padding="3dp"
        android:text="Mobile number"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txv_label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_mobile"
        android:layout_toRightOf="@id/image"
        android:padding="5dp"
        android:text="Email"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_mobile"
        android:layout_toRightOf="@id/txv_label_email"
        android:padding="5dp"
        android:text="Email address"
        android:textSize="12dp" />

</RelativeLayout>

</androidx.cardview.widget.CardView>